    "electron-builder": "^22.14.13",
    "electron-packager": "^15.4.0",
    "electron-winstaller": "^5.0.0"
  },
  "scripts": {
    "start": "electron .",
    "server-start": "json-server --watch db.json",
    "build-installer": "electron-builder",
    "build-package": "electron-packager . sems-app --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName='SEMSApp'",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . sems-application --asar=true --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Macare Sems Application\"",
    "package-linux": "electron-packager . electron-tutorial-app --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds",
    "build": "electron-builder build --win --publish never",
    "deploy": "electron-builder build --win --publish always"
  },
  "build": {
    "appId": "com.sems.app",
    "asar": false,
    "win": {
      "target": [
        "nsis"
      ],
      "publish": [
        {
          "provider": "github",
          "owner": "ebdayangco",
          "repo": "sems-application-via-electron",
          "token": "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"
        }
      ],
      "icon": "assets/icons/win/icon.ico"
    },
    "nsis": {
      "installerIcon": "assets/icons/win/icon.ico",
      "uninstallerIcon": "assets/icons/win/icon.ico",
      "uninstallDisplayName": "Sems App",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [],
